<%= rss_tag(posts_index_url(:format => :xml)) %>

<h1>Listing Posts (Erubis)</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Email</th>
    <th>Body</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.email %></td>
    <td><%= post.body %></td>
    <td><%= post.created_at %></td>
    <td><%= post.updated_at %></td>
    <td><%= link_to("Show", posts_show_url(:id => post)) %></td>
    <td><%= link_to("Edit", posts_edit_url(:id => post)) %></td>
    <td><%= link_to("Delete", posts_delete_url(:id => post), :method => :delete, :confirm => "Are you sure?") %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to("New Post", posts_new_url) %>